<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.marobiana.quiz.lesson06.dao.BookingDAO">
 	
 	<select id="seleteBookingList" resultType="com.marobiana.quiz.lesson06.model.Booking">
 		SELECT
			`id`
			,`name`
			,`headcount`
			,`day`
			,`date`
			,`phoneNumber`
			,`state`
			,`createdAt`
			,`updatedAt`
		FROM
			`booking`
 	</select>
 	
 	<delete id="deleteBooking" parameterType="int">
 		DELETE FROM
 			`booking`
 		WHERE
 			`id` = #{id}
 	</delete>
 	
 	<insert id="insertBooking" parameterType="map">
 		INSERT INTO `booking`
 		(
 			`name`
 			, `date`
 			, `day`
 			, `headcount`
 			, `phoneNumber`
 			,`createdAt`
			,`updatedAt`
 		)
 		VALUES
 		(
 		 	#{name}
 			, #{date}
 			, #{day}
 			, #{headcount}
 			, #{phoneNumber}
 			, now()
 			, now()
 		)
 	</insert>
 	
 	<select id="selectCheckBooking" parameterType="string" resultType="int">
 		SELECT
 			count(*)
 		FROM
 		 	`booking`
 		WHERE
 			`name` = #{name}
 			, `phoneNumber` = #{phoneNumber}
 	</select>
 </mapper>